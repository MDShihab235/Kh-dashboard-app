
mixin transaction(name, amount, date, image)
  .flex.items-center.py-3
    img.w-10.h-10.rounded-full.mr-3.border-2.border-purple-500(src=image alt=name)
    .flex-grow
      span.font-medium.mr-1= name
      span.text-sm.text-green-400= amount + " USD"
    span.text-sm.text-gray-400= date

.bg-gray-900.rounded-lg.p-6.w-full
  div(class="flex gap-2.5 justify-center")
    div(class="flex flex-col border-gray-500 border-dashed border-2 border-divider py-2 px-6 rounded-xl") 
      span.text-default-900.text-xl.font-semibold Latest Transactions
  .overflow-y-auto(style="max-height: 250px;")
